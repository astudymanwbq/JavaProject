<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="po.Book" table="T_BOOK">
		<id name="bid" column="BID">
			<generator class="assigned" />
		</id>
		<property name="bname" column="BNAME" />
		<property name="btype" column="BTYPE" />
		<property name="bauthor" column="BAUTHOR" />
		<property name="bprice" column="BPRICE" />
		<property name="bamount" column="BAMOUNT" />
		<property name="bdate" column="BDATE" />
	</class>
</hibernate-mapping>